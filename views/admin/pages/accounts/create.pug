extends ../../layouts/default.pug

block main 
    h1(class="mb-4") Tạo mới tài khoản

    form(
        action=`${prefixAdmin}/accounts/create`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="fullName") Họ tên *
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
            )

        div(class="form-group")
            label(for="email") Email *
            input(
                type="text"
                class="form-control"
                id="email"
                name="email"
            )

        div(class="form-group")
            label(for="password") Password *
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
            )

        div(class="form-group")
            label(for="phone") Số điện thoại
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
            )

        div(class="form-group" upload-image)
            label(for="avatar") Ảnh
            input(
                type="file"
                class="form-control-file d-block"
                id="avatar"
                name="avatar"
                min=0
                accept="image/*"
                upload-img-input
            )
            img(src="" upload-img-preview class="image-preview")

        div(class="form-group")
            label(for="role_id") Phân quyền
            select(
                class="form-control form-select"
                id="role_id"
                name="role_id"
            )
                option(disabled selected) -- Chọn --
                if(roles)
                    each item in roles 
                        option(value=item.id) #{item.title} 

        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked
            )
            label(for="statusActive") Hoạt động

        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInactive"
                name="status"
                value="inactive"
            )
            label(for="statusInactive") Dừng hoạt động
        
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới
