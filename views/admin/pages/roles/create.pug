extends ../../layouts/default.pug

block main 
    h1(class="mb-4") Thê mới nhóm quyền

    form(
        action=`${prefixAdmin}/roles/create`
        method="POST"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
            )
        
        div(class="form-group")
            label(for="description") Mô tả
            input(
                type="text"
                class="form-control"
                id="description"
                name="description"
            )

        div(class="form-group mt-3")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới
        

                