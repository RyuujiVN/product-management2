extends ../../layouts/default.pug

block main 
    h1(class="mb-4") Phân quyền

    if(records)
        div(data-records=records)

    div(class="text-end")
        button(
            type="submit"
            class="btn btn-primary mb-3"
            button-submit
        ) Cập nhật 
    
    table(class="table table-hover table-sm" table-permissions)
        thead 
            tr 
                th Tính năng 
                if(records)
                    each item in records
                        th(class="text-center") #{item.title} 
        tbody 
            tr(data-name="id" class="d-none")
                td 
                    each item in records
                        td(class="text-center")
                            input(type="text" value=item.id)
            
            //- Danh mục sản phẩm
            tr
                td(colspan="4")
                    b Danh mục sản phẩm

            tr(data-name="products-category_views")
                td Xem
                if(records)
                    each item in records
                        td(class="text-center")
                            input(type="checkbox") 

            tr(data-name="products-category_create")
                td Thêm mới
                if(records)
                    each item in records
                        td(class="text-center")
                            input(type="checkbox")    
            
            tr(data-name="products-category_edit")
                td Chỉnh sửa
                if(records)
                    each item in records
                        td(class="text-center")
                            input(type="checkbox") 
            
            tr(data-name="products-category_delete")
                td Xóa
                if(records)
                    each item in records
                        td(class="text-center")
                            input(type="checkbox") 
            
            //- Sản phẩm
            tr
                td(colspan="4")
                    b Sản phẩm

            tr(data-name="products-views")
                td Xem
                if(records)
                    each item in records
                        td(class="text-center")
                            input(type="checkbox") 

            tr(data-name="products-create")
                td Thêm mới
                if(records)
                    each item in records
                        td(class="text-center")
                            input(type="checkbox")    
            
            tr(data-name="products-edit")
                td Chỉnh sửa
                if(records)
                    each item in records
                        td(class="text-center")
                            input(type="checkbox") 
            
            tr(data-name="products-delete")
                td Xóa
                if(records)
                    each item in records
                        td(class="text-center")
                            input(type="checkbox") 
            
            //- Nhóm quyền
            tr
                td(colspan="4")
                    b Nhóm quyền

            tr(data-name="roles-views")
                td Xem
                if(records)
                    each item in records
                        td(class="text-center")
                            input(type="checkbox") 

            tr(data-name="roles-create")
                td Thêm mới
                if(records)
                    each item in records
                        td(class="text-center")
                            input(type="checkbox")    
            
            tr(data-name="roles-edit")
                td Chỉnh sửa
                if(records)
                    each item in records
                        td(class="text-center")
                            input(type="checkbox") 
            
            tr(data-name="roles-delete")
                td Xóa
                if(records)
                    each item in records
                        td(class="text-center")
                            input(type="checkbox") 
            
            tr(data-name="roles-permissions")
                td Phân quyền
                if(records)
                    each item in records
                        td(class="text-center")
                            input(type="checkbox") 


    form(
        action=`${prefixAdmin}/roles/permissions?_method=PATCH`
        method="POST"
        id="form-change-permissions"
        class="d-none"
    ) 
        div(class="form-group")
            input(
                type="text"
                class="form-control"
                name="permissions"
            )

    script(src="/admin/js/roles.js") 