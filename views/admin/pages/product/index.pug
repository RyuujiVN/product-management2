extends ../../layouts/default.pug

block main
    h1(class="mb-4") Danh sách sản phẩm

    div(class="d-flex")
        each item in filterStatus
            button(class=`btn btn btn-outline-success ${item.class} me-2` button-status=item.status) #{item.name}

    table(class="table table-hover table-sm")
        thead 
            tr 
                th STT
                th Hình ảnh
                th Tiêu đề
                th Giá
                th Trạng thái
                th Hành động
        
        tbody 
            each item, index in products 
                tr 
                    td #{index + 1}
                    td 
                        img(src=item.thumbnail, alt=item.title width="100px" height="auto")
                    td #{item.title}
                    td #{item.priceNew}$
                    td 
                        if(item.status == "active")
                            a(href="#" class="badge text-bg-success") Hoạt động
                        else 
                            a(href="#" class="badge text-bg-danger") Dừng hoạt động
                    td 
                        button(type="button" class="btn btn-warning btn-sm me-2 ") Sửa
                        button(type="button" class="btn btn-danger btn-sm") Xóa 