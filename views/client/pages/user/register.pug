extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    div(class="container my-5")
        div(class="row justify-content-center")
            div(class="col-8")
                h1 Đăng ký tài khoản
                form(
                    action="/user/register"
                    method="POST"
                )

                    div(class="form-group")
                        label(for="fullName") Họ và tên 
                        input(
                            type="text"
                            id="fullName"
                            name="fullName"
                            class="form-control"
                        )

                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="text"
                            id="email"
                            name="email"
                            class="form-control"
                        )

                    div(class="form-group")
                        label(for="password") Mật khẩu
                        input(
                            type="password"
                            id="password"
                            name="password"
                            class="form-control"
                        )

                    div(class="form-group")
                        button(type="submit" class="btn btn-primary form-control") Đăng ký

        