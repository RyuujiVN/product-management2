extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    div(class="container my-5")
        div(class="row justify-content-center")
            div(class="col-8")
                h1 Trang thông tin cá nhân
                form(
                    action="/user/password/otp"
                    method="POST"
                )

                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="text"
                            id="email"
                            name="email"
                            class="form-control"
                            readonly
                            value = email
                        )

                    div(class="form-group")
                        label(for="otp") Mã OTP
                        input(
                            type="text"
                            id="otp"
                            name="otp"
                            class="form-control"
                        )

                    div(class="form-group")
                        button(type="submit" class="btn btn-primary form-control") Xác nhận

        